---
import {
  icons,
  type FeatherAttributes,
  type FeatherIconNames,
} from 'feather-icons';

type Props = {
  name: FeatherIconNames;
  options?: Partial<FeatherAttributes>;
};

const { name, options } = Astro.props;

const icon = icons[name].toSvg(options);
---

<span aria-hidden="true" set:html={icon} />
