---
import {
  icons,
  type FeatherAttributes,
  type FeatherIconNames,
} from 'feather-icons';

type Props = {
  name: FeatherIconNames;
  options?: Partial<FeatherAttributes>;
  class?: string;
};

const { name, options, class: className } = Astro.props;

const icon = icons[name].toSvg(options);
---

<span aria-hidden="true" class={className} set:html={icon} />
